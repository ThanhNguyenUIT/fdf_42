<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".sample_app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), help_path %></li>
        <li class="dropdown">
          <%= link_to t(".alphabet"), "#", class: "dropdown-toggle", "data-toggle": "dropdown" %>
          <ul class="dropdown-menu">
            <li><%= link_to t(".a_z"), filter_path(filter: :alphabet, order: :asc), remote: true %></li>
            <li><%= link_to t(".z_a"), filter_path(filter: :alphabet, order: :desc), remote: true %></li>
          </ul>
        </li>
        <li class="dropdown">
          <%= link_to t(".price"), "#", class: "dropdown-toggle", "data-toggle": "dropdown" %>
          <ul class="dropdown-menu">
            <li><%= link_to t(".lowest_to_highest"), filter_path(filter: :price, order: :asc), remote: true %></li>
            <li><%= link_to t(".highest_to_lowest"), filter_path(filter: :price, order: :desc), remote: true %></li>
          </ul>
        </li>
        <li class="dropdown">
          <%= link_to t(".category"), "#", class: "dropdown-toggle", "data-toggle": "dropdown" %>
          <ul class="dropdown-menu">
            <%= render @categories %>
          </ul>
        </li>
        <li>
          <%= link_to content_tag(:span, show_badge(session[:cart].size), class: "glyphicon glyphicon-shopping-cart").html_safe,
            is_empty_cart? ? "#" : carts_path, id: "cart_nav" %>
        </li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to((t ".account", bold_tag: content_tag(:b, "", class: "caret")).html_safe,
              "#", class: "dropdown-toggle", "data-toggle": "dropdown") %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".my_orders"), orders_path %></li>
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
