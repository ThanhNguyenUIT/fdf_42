<div class="row">
  <div class="col-md-12">
  <h1 class="text-center"><%= t ".products" %></h1>
  <div class="add-product">
    <%= link_to new_admin_product_path, class: "btn btn-success pull-right" do %>
      <i class="glyphicon glyphicon-plus"></i> <%= t ".create" %>
    <% end %>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center"><%= t ".id" %></th>
        <th class="text-center"><%= t ".name" %></th>
        <th class="text-center"><%= t ".image" %></th>
        <th class="text-center"><%= t ".price" %></th>
        <th class="text-center"><%= t ".quantity" %></th>
        <th class="text-center"><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody id="products">
      <%= render @products %>
    </tbody>
    <%= will_paginate %>
  </table>
</div>
</div>
