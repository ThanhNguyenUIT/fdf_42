<% provide :title, t(".change_password") %>
<h1><%= t ".change_password" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
      html: {method: :put}) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.label :password, t(".new_password") %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> <%= t ".characters_minimum" %></em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, t(".confirm_new_password") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit t(".change_password"), class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
