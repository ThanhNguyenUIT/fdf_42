<tr id="item_<%= product.id %>">
  <td data-th="Product" class="product">
    <div class="row">
      <div class="col-sm-2">
        <%= show_product_image product %>
      </div>
      <div class="col-sm-10">
        <h4><%= product.name %></h4>
      </div>
    </div>
  </td>
  <td data-th="Price" class="price"><%= number_to_currency product.price %></td>
  <td data-th="Quantity">
    <input type="number" class="form-control text-center quantity"
      min="<%= Settings.quantity.one %>" max="<%= product.quantity %>"
      value="<%= product.quantity_in_cart %>" data-product="<%= product.id %>">
  </td>
  <td data-th="Subtotal" class="subtotal">
    <%= number_to_currency product.price * product.quantity_in_cart %>
  </td>
  <td data-th="Delete" class="delete">
    <%= link_to content_tag(:i, "", class: "glyphicon glyphicon-trash").html_safe,
      remove_cart_path(product), class: "btn btn-danger btn-sm" %>
  </td>
</tr>
